<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="@color/whiteMilk">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CardImageItemMessagesProfile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
        android:layout_marginStart="15dp">
        <ImageView
            android:id="@+id/imageItemMessagesProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hof" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textItemMessagesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/roboto_black"
        android:text="Hofmanita"
        android:textColor="@color/pomadeRed"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/CardImageItemMessagesProfile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/previewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Сосочка-девочка, почему одна, щас будет два. Не стесняйся давай, полчасика на подмыться и жду на своём одноместном кабриолете телесного цвета. Букет тебе."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CardImageItemMessagesProfile"
        app:layout_constraintTop_toBottomOf="@+id/textItemMessagesTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>